{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "options": {
                "title": "crossbar-worker [router]",
                "pythonpath": [
                    ".."
                ]
            },
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "components": [
                {
                    "type": "class",
                    "classname": "server.MyComponent",
                    "realm": "realm1",
                    "role": "anonymous"
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 5000
                    },
                    "paths": {
                        "/": {
                            "type": "wsgi",
                            "module": "run",
                            "object": "app"
                        },
                        "ws": {
                            "type": "websocket",
                            "url": "ws://127.0.0.1:5000/ws"
                        }
                    }
                }
            ]
        }
    ]
}
